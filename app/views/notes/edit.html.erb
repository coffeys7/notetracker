<%= bootstrap_form_for @note, html:{ id:"edit-note-form" } do |f| %>
    <%= f.text_field :title, label:"Title"%>
    <%= f.text_area :subtitle, label:"Content"%>
    <%= f.text_area :annotation, label:"Additional"%>
    <%= f.collection_select :folder_id, @folders, :id, :name, include_blank: false, label:"Folder" %>
    <br/>
    <%= f.submit "Save" %>
<% end %>