
<a href="<%= url_for new_folder_path %>" class="btn new-btn">
  Add Folder
</a>

<div class="folders-container">
  <% @folders.each do |folder| %>
    <div class="folder-box">
      <p class="title">
        <%= folder.title %>
      </p>
      <hr>
      <p class="description">
        <%= folder.description %>
      </p>
      <div class="toolbar">
        <a class="toolbar-item edit-btn" href="<%= url_for edit_folder_path(folder) %>">
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        </a>
        <a class="toolbar-item open-btn" href="<%= "/folders/notes?id=#{ folder.id }" %>">
          <i class="fa fa-folder-open-o" aria-hidden="true"></i>
        </a>
      </div>
    </div>
  <% end %>
</div>
